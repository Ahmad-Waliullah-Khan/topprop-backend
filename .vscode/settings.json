{
    "editor.rulers": [80],
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
    },

    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "dist": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "typescript.preferences.quoteStyle": "single",
    "eslint.run": "onSave",
    "eslint.nodePath": "./node_modules",
    "eslint.validate": ["javascript", "typescript"],
    "files.autoSave": "onFocusChange",
    "workbench.colorCustomizations": {
        "activityBar.background": "#56103c",
        "titleBar.activeBackground": "#2b081e",
        "titleBar.activeForeground": "#e7e7e7",
        "activityBar.activeBackground": "#56103c",
        "activityBar.activeBorder": "#4b6b14",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#4b6b14",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#2b081e",
        "statusBar.border": "#2b081e",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#56103c",
        "titleBar.border": "#2b081e",
        "titleBar.inactiveBackground": "#2b081e99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#2b081e"
}
